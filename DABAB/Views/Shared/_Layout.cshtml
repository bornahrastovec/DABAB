@using DABAB.Models


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/modernizr")
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.15.0/css/mdb.min.css" rel="stylesheet">

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/Content/NavbarCustom.css" rel="stylesheet" />
    @Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
    @Scripts.Render("~/bundles/knockout")


</head>
<body>
    <header>

        <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar" style="background-color:#E65353">
            <a class="navbar-brand" href="#"><strong>@Html.ActionLink("DABAB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</strong></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Movie", null)">Filmovi</a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("","",null)">Recenzije</a>
                    </li>
                    <li>
                        <a class="nav-link" href="@Url.Action("Index","Actor", null)">Glumci</a>
                    </li>
                </ul>
                <div class="navbar navbar-inverse navbar-fixed-bottom  navbar-dark" style="background-color:#C11515;" id="navbarDropdown">
                    <!--#4C4C4C-->
                    <div class="container" id="myContainer">

                        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                        {
                            @Html.TextBox("search") <input type="Submit" value="Traži" class="btn btn-sm" />
                        }

                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">Administrator</a>
                        <div class="dropdown-menu dropdown-primary" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="@Url.Action("Dashboard","Home", null)">Kontrolna ploča</a>
                            <a class="dropdown-item" href="#">Povijest pristupa</a>
                            <a class="dropdown-item" href="#">Sample</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container body-content" style="background-color: gray">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:white;">&copy; @DateTime.Today.Year- PAUP Projekt</p>
            <br />
            <br />
        </footer>
        <nav class="navbar fixed-bottom navbar-expand-lg navbar-dark scrolling-navbar" style="background-color:#E65353">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <div class="container">
                    <ul class="nav navbar-nav">
                        <li>
                            <a class="nav-link" href="@Url.Action("Contact","Home", null)">O projektu</a>
                        </li>
                        <li>
                            <a class="nav-link" href="@Url.Action("FAQ","Home", null)">FAQ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.15.0/js/mdb.min.js"></script>
    <!-- JQuery -->
</body>
</html>





