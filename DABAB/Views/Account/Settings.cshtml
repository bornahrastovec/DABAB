@using DABAB.Models;
@model User

@{
    ViewBag.Title = "Settings";
}

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />



<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <br />
        <div class="form-horizontala">
            <h2 style="margin-left:40px"> Promjena podataka:</h2>

            <hr />
            <h4 style="margin-left:40px">@Html.LabelFor(model => model.Email): @Model.Email </h4>
            <div class="form-group" style="margin-left:20%">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="margin-left:20%">
                @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            <div class="form-group" style="margin-left:20%">
                <div class="col-sm-offset-7 col-sm-5">
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span> Spremi
                    </button>
                </div>
            </div>


        </div>
    }

</div>
