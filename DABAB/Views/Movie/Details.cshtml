@model DABAB.Models.Movie

@{
    ViewBag.Title = "Detalji o filmu";
    
}

<h2>@ViewBag.Title</h2>

<div>
    

    <div class="row">
        <div class="col-md-2">
            <strong>Naziv filma: </strong>
        </div>
        <div class="col-md-10">
            @Model.Title
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-2">
            <strong>Rating: </strong>
        </div>
        <div class="col-md-10">
            @Model.Rating
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-2">
            <strong>Datum izdavanja: </strong>
        </div>
        <div class="col-md-10">
            @Model.ReleaseDate
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-2">
            <strong>Opis: </strong>
        </div>
        <div class="col-md-10">
            @Model.Description
        </div>
    </div>


</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MovieId }) |
    @Html.ActionLink("Back to List", "Index","Home")
</p>
