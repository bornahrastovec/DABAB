@using PagedList
@using PagedList.Mvc
@model IPagedList<DABAB.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

}

<link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
<link rel="stylesheet" type="text/css" href="~/Content/LoginRegister.css" />

<h2>Filmovi</h2>
<table class="table">
    <tr>
        <th>
            @using (Html.BeginForm("Index", "Movie", FormMethod.Get))
            {
                @Html.TextBox("search") <input type="Submit" value="Traži" id="search" class="btn btn-sm"  />
            }
        </th>
        <th>
            <button type="button" class="btn btn-primary">
                @Html.ActionLink("Dodaj", "Create", "", new { @class = "text-white" })
            </button>
        </th>
        <th>
            <button type="button" class="btn btn-primary">
                <a style="color:white;" href="@Url.Action("Index","Actor")">Glumci</a>
            </button>
        </th>
    </tr>
</table>
<table class="table table-dark table-responsive-lg">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ReleaseDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate.Date.Year)
            </td>
            <td>
                <button type="button" class="btn btn-light">
                    @Html.ActionLink("Ažuriraj", "Edit", new { id = item.MovieId })
                </button>
                <button type="button" class="btn btn-warning">
                    @Html.ActionLink("Briši", "Delete", new { id = item.MovieId })
                </button>
            </td>
        </tr>
    }

</table>

<div id="pager">
    Ukupno rezultata: @Model.TotalItemCount <br />

    Stranica: @(Model.PageCount < Model.PageCount ? 0 : Model.PageNumber) od @Model.PageCount
    <br />
    <br />
   

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, search = Request.QueryString["search"] }),new PagedListRenderOptions {  
                         DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                         DisplayLinkToLastPage = PagedListDisplayMode.Never,
                         DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                         DisplayLinkToNextPage = PagedListDisplayMode.Always,
                         MaximumPageNumbersToDisplay = 5 })
</div>



<p>
    <a href="@Url.Action("moviesPDF","Movie")" class="btn btn-primary">
        Kreiraj PDF
    </a>
</p>

