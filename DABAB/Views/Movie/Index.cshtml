@using PagedList
@using PagedList.Mvc
@model IPagedList<DABAB.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />

}

<link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
<link rel="stylesheet" type="text/css" href="~/Content/LoginRegister.css" />

<h2>Filmovi</h2>
<table class="table">
    <tr>
        <th>
            @using (Html.BeginForm("Index", "Movie", FormMethod.Get))
            {
                @Html.TextBox("search") <input type="Submit" value="Traži" />
            }
        </th>
        <th>
            <button type="button" class="btn btn-primary">
                @Html.ActionLink("Dodaj", "Create", "", new { @class = "text-white" })
            </button>
        </th>
        <th>
            <button type="button" class="btn btn-primary">
                <a style="color:white;" href="@Url.Action("Index","Actor")">Glumci</a>
            </button>
        </th>
    </tr>
</table>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Naziv", "Index", new { sort = ViewBag.NameSort, search = Request.QueryString["search"] })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Rating)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
                <input type="hidden" id="rating" value="@item.Rating" />
                <div class="rating">
                    <input disabled type="radio" name="star" id="star1"><label for="star1" title="5+">
                    </label>
                    <input disabled type="radio" name="star" id="star2"><label for="star2" title="4+">
                    </label>
                    <input disabled type="radio" name="star" id="star3"><label for="star3" title="3+">
                    </label>
                    <input disabled type="radio" name="star" id="star4"><label for="star4" title="2+">
                    </label>
                    <input disabled type="radio" name="star" id="star5"><label for="star5" title="1+">
                    </label>
                </div>
                
            </td>
            <td>
                <button type="button" class="btn btn-primary">
                    @Html.ActionLink("Detalji", "Details", new { id = item.MovieId })
                </button>
                <button type="button" class="btn btn-primary">
                    @Html.ActionLink("Ažuriraj", "Edit", new { id = item.MovieId })
                </button>
                <button type="button" class="btn btn-primary">
                    @Html.ActionLink("Briši", "Delete", new { id = item.MovieId })
                </button>
            </td>
        </tr>
    }

</table>

<div id="pager">
    Ukupno rezultata: @Model.TotalItemCount <br />

    Stranica: @(Model.PageCount < Model.PageCount ? 0 : Model.PageNumber) od @Model.PageCount
    <br />
    <br />


    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, search = Request.QueryString["search"] , sort = Request.QueryString["sort"] }), new PagedListRenderOptions
    {
                         DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                         DisplayLinkToLastPage = PagedListDisplayMode.Never,
                         DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                         DisplayLinkToNextPage = PagedListDisplayMode.Always,
                         MaximumPageNumbersToDisplay = 5
    })
</div>



<p>
    <a href="@Url.Action("moviesPDF","Movie")" class="btn btn-primary">
        Kreiraj PDF
    </a>
</p>


<script>
    var ratingElem = document.getElementById("rating");
    var ratingValue = ratingElem.getAttribute("value");
    console.log(ratingValue);

    function check(starX) {
        document.getElementById(starX).checked = true;
    }

    switch (ratingValue) {

        case ("OneStar"):
            check("star5")
            break;
        case ("TwoStars"):
            check("star4")
            break;

        case ("ThreeStars"):
            check("star3")
            break;

        case ("FourStars"):
            check("star2")
            break;

        case ("FiveStars"):
            check("star1")
            break;

    }

</script>